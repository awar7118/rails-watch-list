<h1 class = 'list-name'>Your <%= @list.name %> List ..👇🏾</h1>

<% @list.bookmarks.each do |bookmark| %>
  <div class="card-product">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
    <div class="card-product-infos">
      <h2>
      <%= bookmark.movie.title %>
      <%= link_to 'Delete bookmark', bookmark_path(bookmark), method: :delete, class: "btn btn-danger mt-1", data: { confirm: 'Are you sure?' } %>
      </h2>
      <p>Product description with <strong>relevant info</strong> only.</p>
    </div>
  </div>
<% end %>
<%= link_to 'create a new bookmark', new_list_bookmark_path(@list), class: "btn btn-success mt-3"%>
<%= link_to 'Go back', lists_path, class: "btn btn-success mt-3" %>
